{
  "name": "@nick/dev-lerna-monorepo-ts",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/api/*",
      "packages/app/*"
    ]
  },
  "scripts": {
    "build": "run-p clean run-s build:api",
    "build:api": "tsc -b ./packages/tsconfig.api-base.json",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run --parallel clean",
    "release": "lerna publish"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/node": "^15.0.2",
    "lerna": "^4.0.0"
  }
}
